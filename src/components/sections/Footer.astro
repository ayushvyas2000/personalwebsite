---
import { personalInfo, socialLinks, navLinks } from '../../data/portfolio';
import Icon from '../ui/Icon.astro';

const currentYear = new Date().getFullYear();
---

<footer class="bg-dark-lighter border-t border-border relative overflow-hidden">
  <!-- Subtle animated gradient at top of footer -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary to-transparent"></div>
  
  <div class="container mx-auto px-4 md:px-6 lg:px-8 max-w-6xl py-12">
    <div class="grid md:grid-cols-3 gap-8 mb-8" data-animate="fade-up">
      <!-- Brand -->
      <div class="space-y-4">
        <a href="#home" class="text-2xl font-bold gradient-text-shift inline-block">
          {personalInfo.name}<span class="text-primary"></span>
        </a>
        <p class="text-text-muted text-sm max-w-xs">
          Software Engineer passionate about building exceptional digital experiences.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-text font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {navLinks.slice(0, 4).map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-text-muted hover:text-primary hover:translate-x-1 transition-all duration-300 text-sm inline-block"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h4 class="text-text font-semibold mb-4">Connect</h4>
        <div class="flex gap-3">
          {socialLinks.map((link) => (
            <a 
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="magnetic p-2 rounded-lg bg-dark-card border border-border text-text-muted hover:text-primary hover:border-primary hover:shadow-md hover:shadow-primary/10 transition-all duration-300"
              aria-label={link.name}
            >
              <Icon icon={link.icon as 'github' | 'linkedin' | 'email'} size={18} />
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-border pt-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-text-muted text-sm">
          &copy; {currentYear} {personalInfo.name}. All rights reserved.
        </p>
        <p class="text-text-muted text-sm">
          Built with 
          <span class="text-primary">Astro</span> 
          & 
          <span class="text-secondary">TailwindCSS</span>
        </p>
      </div>
    </div>
  </div>
</footer>
