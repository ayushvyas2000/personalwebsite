---
interface Props {
  name: string;
  class?: string;
}

const { name, class: className = '' } = Astro.props;
---

<span class={`
  inline-block px-3 py-1 
  text-sm font-medium 
  bg-primary/10 text-primary 
  rounded-full border border-primary/20
  transition-all duration-300
  hover:bg-primary/20 hover:border-primary/40
  ${className}
`}>
  {name}
</span>
