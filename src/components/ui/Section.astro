---
interface Props {
  id?: string;
  class?: string;
  background?: 'default' | 'grid' | 'gradient';
  divider?: boolean;
}

const { 
  id, 
  class: className = '',
  background = 'default',
  divider = true
} = Astro.props;

const backgrounds = {
  default: 'bg-dark',
  grid: 'grid-bg bg-dark',
  gradient: 'bg-gradient-to-b from-dark-lighter to-dark'
};
---

<section 
  id={id} 
  class={`py-24 md:py-32 scroll-mt-20 relative ${backgrounds[background]} ${className}`}
>
  {divider && (
    <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-border to-transparent"></div>
  )}
  <div class="container mx-auto px-4 md:px-6 lg:px-8 max-w-5xl">
    <slot />
  </div>
</section>
